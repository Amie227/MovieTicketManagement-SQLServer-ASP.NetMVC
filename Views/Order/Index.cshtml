@model IEnumerable<no12finalproject.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h2>訂單列表</h2>
<div class="table-container">
<table class="table">
    <thead>
        <tr>
            <th>訂單時間</th>
            <th>總金額</th>
            <th>用戶</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.OrderTime</td>
                <td>@o.TotalPrice</td>
                <td>@o.User?.Name</td>
                <td><a href="/Order/Details/@o.OrderID" class="details-link">詳細</a></td>
            </tr>
        }
    </tbody>
</table>
</div>

